<!--DialogueView-->

<%
  let colorClass = "text-gray-500";
  if (affiliation === "friendly") colorClass = "text-green-600";
  if (affiliation === "enemy") colorClass = "text-red-600";
%>

<div class="flex flex-col items-center mb-7">
  <h1 class="<%- colorClass %> font-bold text-lg"><%- name %></h1>
  <h2 class="text-center"><span class="<%- colorClass %> font-bold">&lt;&lt;</span> <%- content %> <span class="<%- colorClass %> font-bold">&gt;&gt;</span></h2>
</div>
